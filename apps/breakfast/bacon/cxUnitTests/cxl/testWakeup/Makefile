COMPONENT=TestAppC

TEST_NUM?=0
CFLAGS += -DTEST_NUM=$(TEST_NUM)

CFLAGS+=-I$(TOSDIR)/lib/serialprintf
CFLAGS += -I$(TOSDIR)/lib/cxl/mac
CFLAGS += -I$(TOSDIR)/lib/cxl/link
CFLAGS += -I$(TOSDIR)/lib/cxl/debug
CFLAGS += -I$(TOSDIR)/lib/cxl/packet
CFLAGS += -I$(TOSROOT)/apps/breakfast/bacon/settingsStorage
CFLAGS += -I$(TOSROOT)/apps/breakfast/bacon/RebootCounter
CFLAGS += -I$(TOSROOT)/apps/breakfast/util
CFLAGS += -I$(TOSDIR)/chips/msp430/tlvStorage
CFLAGS += -I$(TOSDIR)/lib/rf1a-tdma/timer


CFLAGS += -I$(TOSDIR)/lib/cxl/am
CFLAGS += -DAM_ID_FROM_FLASH=0

PFLAGS+=-DMSP430XV2_DCO_CONFIG=MSP430XV2_DCO_32MHz_RSEL6
CFLAGS+=-DXT2_SMCLK

CFLAGS+= -DTOSH_DATA_LENGTH=111
CFLAGS+= -DRF1A_FEC_ENABLED=1
MAX_POWER?=0x2D
CFLAGS += -DMAX_POWER=$(MAX_POWER)
CFLAGS+= -DRF1A_AUTOCAL=0

CFLAGS += -DENABLE_PRINTF=1
CFLAGS += -DRAW_SERIAL_PRINTF=1
CFLAGS += -DDL_LPP=DL_WARN
CFLAGS += -DDL_LINK=DL_WARN

CFLAGS +=-DENABLE_PROBE_SCHEDULE_CONFIG=0

PROBE_INTERVAL?=1024UL
CFLAGS += -DLPP_DEFAULT_PROBE_INTERVAL=$(PROBE_INTERVAL)
CFLAGS += -DLPP_SLEEP_TIMEOUT=6144UL

CFLAGS+=-DGLOBAL_CHANNEL=64
CFLAGS+=-DROUTER_CHANNEL=32
CFLAGS+=-DSUBNETWORK_CHANNEL=0
CFLAGS+=-DSTATIC_BW=2

SELF_SFD_SYNCH?=1
POWER_ADJUST?=1
CFLAGS +=-DSELF_SFD_SYNCH=$(SELF_SFD_SYNCH)
CFLAGS +=-DPOWER_ADJUST=$(POWER_ADJUST)

PACKET_LENGTH?=1
CFLAGS +=-DPACKET_LENGTH=$(PACKET_LENGTH)

include $(MAKERULES)
